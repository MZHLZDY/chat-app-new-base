{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "resources/js/*",
        "resources/js/**/{*.js,*.ts,*.vue}"
    ],
    "compilerOptions": {
        "noEmit": true,
        "verbatimModuleSyntax": true,
        "lib": ["ES2020", "DOM"],
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "allowJs": true
    },
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
